{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": ".",
    "removeComments": true,
    "isolatedModules": true,
    "declaration": false
  },
  "include": ["script.ts"],
  "exclude": ["node_modules"]
} 